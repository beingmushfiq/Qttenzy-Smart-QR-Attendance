# Application Configuration
APP_NAME=Qttenzy
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://your-domain.com

# Frontend URL (for CORS)
FRONTEND_URL=https://your-frontend-domain.com

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=qttenzy
DB_USERNAME=root
DB_PASSWORD=

# JWT Authentication
# Generate with: php artisan jwt:secret
JWT_SECRET=

# Session & Cache
SESSION_DRIVER=file
CACHE_DRIVER=file
QUEUE_CONNECTION=sync

# SSLCommerz Payment Gateway
# Get credentials from: https://developer.sslcommerz.com/
SSLCOMMERZ_STORE_ID=
SSLCOMMERZ_STORE_PASSWORD=
SSLCOMMERZ_MODE=sandbox  # Change to 'live' for production

# Payment Demo Mode
# Set to true for testing without real payment credentials
PAYMENT_DEMO_MODE=false

# Stripe Payment Gateway
# Get credentials from: https://dashboard.stripe.com/apikeys
STRIPE_KEY=
STRIPE_SECRET=
STRIPE_WEBHOOK_SECRET=

# Mail Configuration (Optional)
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@qttenzy.com
MAIL_FROM_NAME="${APP_NAME}"

# Redis Configuration (Optional - for production caching/queues)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=debug
